<% include ./partials/header.ejs %>
<div class="container">
    
            <form class="formsStyle" id="pollForm" action="/dashboard" method="POST">
                    <h1><strong>Create New Polls</strong></h1>

                    <div class="form-group">
                        <label class="control-label" for="title">Title:</label>
                        <input class="form-control" placeholder="Please enter a title" name="title" type="text"/>
                    </div>

                      <div class="form-group">
                        <label class="control-label" for="description">Description:</label>
                        <input class="form-control" placeholder="Please enter a description" name="description" type="text"/>
                      </div>

                     <div class="form-group">
                       <label class="control-label" for="option">Create at Least <strong>2</strong> Options:</label>

                           <div id="optionList" class="list-group">

                                <input class="list-group-item form-control" type="text" name="option[1]" placeholder="Option 1 REQUIRED" required>
                        
                                <input class="list-group-item form-control" type="text" name="option[2]" placeholder="Option 2 REQUIRED" required>
                                
                            
                            </div>
                    </div>
                    
                    
                   <div class=" row ">
                        <div class="col-md-4">  <button type="button" class="btn btn-block btn-default" id="moreOptions">Add More Options</button></div>
                        
                       <div class="col-md-4">  <button type="button" class="btn btn-block btn-warning" id="remLastOption" disabled="true">Remove Last Option</button></div>

                        <div class="col-md-4"> <button type="submit" name="submit" id="submit" class="btn btn-block btn-success"/>Create Poll</div>
                    </div>
                </form>

</div>
<canvas id="myChart" width="400" height="400"></canvas>



